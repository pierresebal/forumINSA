                <div class="box-body">
                    <strong><i class="fa fa-book margin-r-5"></i> Numéro siret</strong>
                    <p class="text-muted">
                        <%= company.siret %>
                    </p>
                    <hr>

                    <strong><i class="fa fa-book margin-r-5"></i> Groupe</strong>
                    <p class="text-muted">
                        <%= company.companyGroup %>
                    </p>
                    <hr>

                    <strong><i class="fa fa-book margin-r-5"></i> Description</strong>
                    <p class="text-muted">
                        <%= company.description %>
                    </p>
                    <hr>

                    <strong><i class="fa fa-book margin-r-5"></i> Site internet</strong>
                    <p class="text-muted">
                        <a href="<%= company.websiteUrl %>" target="_blank"><%= company.websiteUrl %></a>
                    </p>
                    <hr>

                    <strong><i class="fa fa-book margin-r-5"></i> Site internet</strong>
                    <p class="text-muted">
                        <a href="<%= company.careerUrl %>" target="_blank"><%= company.careerUrl %></a>
                    </p>
                    <hr>

                    <strong><i class="fa fa-book margin-r-5"></i> Adresse postale</strong>
                    <p class="text-muted">
                        <%=company.road%><br />
                        <% if (typeof complementaryInformation != 'undefined' && complementaryInformation != "") { %>
                            <%= company.complementaryInformation %><br />
                        <% } %>
                        <%= company.postCode %> <%= company.city %><br />
                        <%= company.country %>
                    </p>
                </div>
                <!-- /.box-body -->
                </form>

            </div>
            <!-- /.box -->
        </div>
